{% extends 'base.html.twig' %}

{% block title %}Genre index
{% endblock %}

{% block body %}
	
	<h1>Genre</h1>

	<br> 
	<a href="{{ path('app_genre_new') }}" class="create-new">Create new</a>


	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for genre in genres %}
				<tr>
					<td>{{ genre.id }}</td>
					<td>{{ genre.title }}</td>
					<td>
						<a href="{{ path('app_genre_show', {'id': genre.id}) }}">show</a>
						<a href="{{ path('app_genre_edit', {'id': genre.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% endblock %}
