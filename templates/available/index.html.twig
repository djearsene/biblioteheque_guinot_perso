{% extends 'base.html.twig' %}

{% block title %}Available index{% endblock %}

{% block body %}
<style>
		table {
			width: 65%;
			border-collapse: collapse;
			border: 3px solid;
			margin-left: 18%;
		}
        th,
		td {
			padding: 20px;
			border: 1px solid;
            text-align: center; 
		}
        h1 {
            text-align: center; 
        }
	</style>
    <h1>Available index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for available in availables %}
            <tr>
                <td>{{ available.id }}</td>
                <td>{{ available.title }}</td>
                <td>
                    <a href="{{ path('app_available_show', {'id': available.id}) }}">show</a>
                    <a href="{{ path('app_available_edit', {'id': available.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_available_new') }}">Create new</a>
{% endblock %}
