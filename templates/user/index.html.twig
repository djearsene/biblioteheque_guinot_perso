{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<style>
		table {
			width: 65%;
			border-collapse: collapse;
			border: 3px solid;
			margin-left: 18%;
		}
		th,
		td {
			padding: 20px;
			border: 1px solid;
			text-align: center;
		}
		h1 {
			text-align: center;
		}
	</style>
	<h1>User index</h1>
    <br>
    <a href="{{ path('app_user_new') }}">Create new</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Lastname</th>
				<th>Firstname</th>
				<th>Email</th>
				<th>Password</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.lastname }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.password }}</td>
					<td>
						<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
						<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	
{% endblock %}
