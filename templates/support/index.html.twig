{% extends 'base.html.twig' %}

{% block title %}Support index{% endblock %}

{% block body %}

    <h1>Support</h1>

    <br> 
    <a href="{{ path('app_support_new') }}" class="create-new">Create new</a>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for support in supports %}
            <tr>
                <td>{{ support.id }}</td>
                <td>{{ support.title }}</td>
                <td>
                    <a href="{{ path('app_support_show', {'id': support.id}) }}">show</a>
                    <a href="{{ path('app_support_edit', {'id': support.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
